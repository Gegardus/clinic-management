<div class="container">
  <h2 class="form-header">Create your profile</h2> 
 

<%= form_with model: @profile do |form| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this user from being created:</h2>
      <ul>
        <% @profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
